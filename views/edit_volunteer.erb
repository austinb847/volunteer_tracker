<h1>Update <%= @volunteer.name %></h1>

<form action="/projects/<%= @project.id%>/volunteers/<%= @volunteer.id%>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="volunteer_name">Edit Volunteer Name</label>
  <input id="volunteer_name" name="volunteer_name" type="text" class="form-control" value= "<%= @volunteer.name%>">
  <button type="submit">Update Name</button>
</form>

<p><a href="/projects/<%= @project.id %>/volunteers">Return to Volunteers list for project: <%= @project.title%></a></p>